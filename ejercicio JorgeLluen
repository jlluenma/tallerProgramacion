package tareaGrupal;

import java.util.Scanner;

/*
Resolver un problema que utilice una estructura
while usando un acumulador y un contador.
 */
public class sem6 {
    public static void main(String[] args) {
        Scanner lector = new Scanner(System.in);
        int j=0,i=0,edades,estudiantes;
        double prom;

        System.out.println("Ingrese la cantidad de estudiantes: ");
        estudiantes = lector.nextInt();


        while (j >= 0 && j < estudiantes){
            System.out.println("Por favor ingrese las edades de cada uno para sacar su promedio:");
            edades = lector.nextInt();
            i += edades;    //Acumulador
            j ++;   //Contador
        }
        prom = (double) i /estudiantes;
        System.out.println("El promedio de " + estudiantes + " estudiantes es: " + prom);
    }
}

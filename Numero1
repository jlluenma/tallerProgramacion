package pe.edu.utp.tp;

import java.util.Scanner;

public class s4numero1 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        short opcion;

        do {
            System.out.println("Menú de opciones:");
            System.out.println("1. Sumar dos números");
            System.out.println("2. Restar dos números");
            System.out.println("3. Multiplicar dos números");
            System.out.println("4. Dividir dos números");
            System.out.println("0. Salir");
            System.out.print("Elija una opción: ");

            opcion = scanner.nextShort();

            switch (opcion) {
                case 1:
                    System.out.print("Ingrese el primer número: ");
                    short numero1 = scanner.nextShort();
                    System.out.print("Ingrese el segundo número: ");
                    short numero2 = scanner.nextShort();
                    short resultadoSuma = (short) (numero1 + numero2);
                    System.out.println("El resultado de la suma es: " + resultadoSuma);
                    break;
                case 2:
                    System.out.print("Ingrese el primer número: ");
                    numero1 = scanner.nextShort();
                    System.out.print("Ingrese el segundo número: ");
                    numero2 = scanner.nextShort();
                    short resultadoResta = (short) (numero1 - numero2);
                    System.out.println("El resultado de la resta es: " + resultadoResta);
                    break;
                case 3:
                    System.out.print("Ingrese el primer número: ");
                    numero1 = scanner.nextShort();
                    System.out.print("Ingrese el segundo número: ");
                    numero2 = scanner.nextShort();
                    short resultadoMultiplicacion = (short) (numero1 * numero2);
                    System.out.println("El resultado de la multiplicación es: " + resultadoMultiplicacion);
                    break;
                case 4:
                    System.out.print("Ingrese el primer número: ");
                    numero1 = scanner.nextShort();
                    System.out.print("Ingrese el segundo número: ");
                    numero2 = scanner.nextShort();
                    if (numero2 != 0) {
                        short resultadoDivision = (short) (numero1 / numero2);
                        System.out.println("El resultado de la división es: " + resultadoDivision);
                    } else {
                        System.out.println("No se puede dividir por cero.");
                    }
                    break;
                case 0:
                    System.out.println("Saliendo del programa.");
                    break;
                default:
                    System.out.println("Opción no válida. Por favor, seleccione una opción válida.");
                    break;
            }
        } while (opcion != 0);

        scanner.close();
    }
}


package pe.edu.utp.tp.Ejercicio_3;

import java.util.Scaner; 

public class opciones {

    public static void main (String [] args) {
       int opción;
       Scaner lector = new Scaner(System.in);

       System.out.println("""
       [1] Primera Opción 
       [2] Segunda Opción 
       [3] Tercera Opción 
       [4] Cuarta Opción 

       ---------------------

       Ingrese una opción
       """);
  opción = lector.nextInt();

  switch (opción) {
      case 1: System.out.println("Haz selecionado la primera opción");
              break;
      case 2: System.out.println("Haz selecionado la primera opción");
              break;
      case 3: System.out.println("Haz selecionado la primera opción");
              break;
      case 4: System.out.println("Haz selecionado la primera opción");
              break;
        default: System.out.println("La opción que has selecionado no es valida");
              
        
       

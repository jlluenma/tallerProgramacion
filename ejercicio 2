package tareaGrupal;

import java.util.Scanner;
/*
Escribir un programa en Java que haga uso de un
switch mejorado y utilice además agrupamiento de
opciones. La variable a evaluar debe ser de tipo char
 */
public class sem4 {
    public static void main(String[] args) {
        Scanner lector = new Scanner(System.in);
        char cursoChar;    //Definimos el char a usar
        String resultado;    //Definimos la respuesta del algoritmo

        System.out.println("Ingrese la cantidad de cursos aprobados (total:9): ");    //Mensaje al usuario
        cursoChar = lector.next().charAt(0); //Obtenemos el valor
        int curso = Character.getNumericValue(cursoChar);    //Convertimos de tipo char a entero

        resultado = switch (curso){    //El resultado del switch se guardará en el string
                //Evaluamos los casos
                case 0 -> "Ningún curso aprobado";
                case 1,2,3,4 -> "Aprobado menos de la mitad de cursos";
                case 5,6,7,8 ->"Aprobaste la mayoría de cursos";
                case 9 ->"Aprobaste todos los cursos";
                default -> "La cantidad no es correcta";
            };
            System.out.println("Conclución del ciclo: " + resultado); // Emprimimos el resultado
    }
}
